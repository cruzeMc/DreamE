<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/categoryImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/categoryImageView"
        android:background="@drawable/semi_trans_bg"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/pad_10dp"
        android:paddingRight="@dimen/pad_10dp" >

        <TextView
            android:id="@+id/categoryNameView"
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:text="@string/textview"
            android:textColor="@color/main_color_orange"
            android:textSize="@dimen/txt_14sp"
            android:textStyle="bold"
            android:gravity="center" />

    </LinearLayout>

</RelativeLayout>